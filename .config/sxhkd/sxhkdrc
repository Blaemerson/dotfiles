# Reload this configuration file
super + Escape
  pkill -USR1 -x sxhkd

# Edit this configuration file
control + alt + c
  $TERMINAL -e nvim ~/.config/sxhkd/sxhkdrc

# System
super + BackSpace
  sysact

control + shift + Escape
  $TERMINAL -e htop

super + {_,shift + } Return
  {$TERMINAL, dmenu_run}

# Internet
super + {_, shift + } n
    {networkmanager_dmenu, $TERMINAL -e nmtui}

alt + {_,shift + } w
  {$BROWSER, $TERMINAL -e dmenusurfraw}

# Music
alt + m
  $TERMINAL -e ncmpcpp

alt + {_, shift + } + p
  {mpc toggle, pauseallmpv}

alt + {_,shift + } + bracketleft
  {mpc seek -5, mpc seek -30}

alt + {_,shift + } + bracketright
  {mpc seek +5, mpc seek +30}

# Passwords
super + control + p
 passmenu

# File explorer
alt + {_, shift + } + f
  {$TERMINAL -e ~/.config/vifm/scripts/vifmrun, $TERMINAL -e lf}

# Edit files quickly
alt + {_, shift + } c
  {quickedit, dmenuconfs}

# Open vim
alt + v
    $TERMINAL -e nvim

# Open sxiv in thumbnail modej
alt + i
    dmenuimg

FN + i
    dmenuimg
